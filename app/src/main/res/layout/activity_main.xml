<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta" />

    <TextView
        android:id="@+id/puntaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="47dp"
        android:text="puntaje" />



    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"

        ></View>

    <ImageView
        android:id="@+id/pregunta"
        android:layout_width="348dp"
        android:layout_height="102dp"
        android:src="@drawable/apple2" />

    <ImageView
        android:id="@+id/imgRespuesta1"
        android:layout_width="176dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="105dp"
        android:src="@drawable/apple2" />

    <ImageView
        android:id="@+id/imgRespuesta2"
        android:layout_width="173dp"
        android:layout_height="77dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="186dp"
        android:src="@drawable/apple2" />

    <ImageView
        android:id="@+id/imgRespuesta3"
        android:layout_width="167dp"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="156dp"
        android:src="@drawable/apple2" />

    <Button
        android:id="@+id/respuesta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="122dp"
        android:layout_toStartOf="@+id/imgRespuesta1" />

    <Button
        android:id="@+id/respuesta2"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgRespuesta2"
        android:layout_alignStart="@+id/respuesta1"
        android:text="Respuesta1" />

    <Button
        android:id="@+id/respuesta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgRespuesta3"
        android:layout_toStartOf="@+id/imgRespuesta2" />

    <RadioGroup
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp">

        <RadioButton
            android:id="@+id/rrespuesta1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="Lunes" />

        <RadioButton
            android:id="@+id/rrespuesta2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="Lunes" />

        <RadioButton
            android:id="@+id/rrespuesta3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="Lunes" />


    </RadioGroup>



</RelativeLayout>